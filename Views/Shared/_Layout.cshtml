<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        .field-validation-error {
            color: red;
        }
       
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @if (Request.IsAuthenticated)
                {
                    <strong class="navbar-brand"><i class="fa fa-user"> @Html.Encode(User.Identity.Name)</i></strong>
                    <a href="@Url.Action("Logout","Account")" class="navbar-brand">Logout</a>
                }
                else
                {
                    <a href="@Url.Action("Register","Account")" class="navbar-brand">Register</a>
                    <span> | </span>
                    <a href="@Url.Action("Login","Account")" class="navbar-brand">Login</a>
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="margin-left:10px">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>

@RenderSection("Scripts", required: false)
